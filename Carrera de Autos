import random
import time

# Configuraci贸n de la carrera
NUM_AUTOS = 5
DISTANCIA_META = 50

# Inicializaci贸n de los autos
autos = [0] * NUM_AUTOS  # Lista que guarda la posici贸n de cada auto

# Funci贸n para mostrar el progreso de la carrera
def mostrar_carrera():
    for i, distancia in enumerate(autos):
        print(f"Auto {i+1}: " + "-" * distancia + "" + "-" * (DISTANCIA_META - distancia))
    print("\n" + "=" * 60 + "\n")

# Funci贸n principal de la carrera
def carrera():
    print("隆Comienza la carrera!\n")
    ganador = None
    
    # Bucle de la carrera
    while ganador is None:
        # Avance aleatorio para cada auto
        for i in range(NUM_AUTOS):
            avance = random.randint(1, 3)  # Cada auto avanza entre 1 y 3 unidades
            autos[i] += avance
            if autos[i] >= DISTANCIA_META:
                ganador = i + 1
                break
        
        # Mostrar el progreso de la carrera
        mostrar_carrera()
        time.sleep(0.5)  # Pausa de medio segundo entre turnos

    print(f"隆El auto {ganador} ha ganado la carrera!")

# Iniciar la carrera
carrera()
